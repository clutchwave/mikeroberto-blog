---
import type { ItemGrid as Props } from '~/types';
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';
import Button from './Button.astro';

const { items = [], columns, defaultIcon = '', classes = {} } = Astro.props;

const {
  container: containerClass = '',
  panel: panelClass = '',
  title: titleClass = '',
  description: descriptionClass = '',
  icon: defaultIconClass = 'text-primary',
} = classes;
---

{
  items && items.length > 0 && (
    <div
      class={twMerge(
        `grid gap-8 gap-x-12 sm:gap-y-8 ${
          columns === 4
            ? 'lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2'
            : columns === 3
              ? 'lg:grid-cols-3 sm:grid-cols-2'
              : columns === 2
                ? 'sm:grid-cols-2 '
                : ''
        }`,
        containerClass
      )}
    >
      {items.map(({ title, description, icon, url, urlTitle, callToAction, classes: itemClasses = {} }) => (
        <div
          class={twMerge(
            'relative flex flex-col intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade',
            panelClass,
            itemClasses?.panel
          )}
        >
          {/* Icon - clickable if url provided */}
          {(icon || defaultIcon) && (
            <>
              {url ? (
                <a 
                  href={url} 
                  title={urlTitle || title}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-block"
                >
                  <Icon 
                    name={icon || defaultIcon} 
                    class={twMerge('mb-2 w-10 h-10 transition-transform hover:scale-110', defaultIconClass, itemClasses?.icon)} 
                  />
                </a>
              ) : (
                <Icon 
                  name={icon || defaultIcon} 
                  class={twMerge('mb-2 w-10 h-10', defaultIconClass, itemClasses?.icon)} 
                />
              )}
            </>
          )}
          
          {/* Title - clickable if url provided */}
          {url ? (
            <a 
              href={url} 
              title={urlTitle || title}
              target="_blank"
              rel="noopener noreferrer"
              class={twMerge('text-xl font-bold hover:text-primary transition-colors', titleClass, itemClasses?.title)}
            >
              {title}
            </a>
          ) : (
            <div class={twMerge('text-xl font-bold', titleClass, itemClasses?.title)}>{title}</div>
          )}
          
          {/* Description */}
          {description && (
            <p class={twMerge('text-muted mt-2', descriptionClass, itemClasses?.description)} set:html={description} />
          )}
          
          {/* Optional callToAction button (original functionality) */}
          {callToAction && (
            <div class="mt-2">
              <Button {...callToAction} />
            </div>
          )}
        </div>
      ))}
    </div>
  )
}
